{
  "name": "scrum-chain-backend",
  "version": "1.0.0",
  "description": "Backend para o ScrumChain - Sistema de gerenciamento Scrum na blockchain",
  "main": "server.js",
  "scripts": {
    "start": "node server.js",
    "dev": "nodemon server.js",
    "test": "jest",
    "build": "echo 'No build step required for Node.js'",
    "railway-deploy": "npm install && npm start",
    "debug-env": "node debug-railway-env.js",
    "debug-db": "node -e \"require('./config/database').testConnection()\"",
    "debug-jwt": "node -e \"console.log('JWT_SECRET:', !!process.env.JWT_SECRET); console.log('JWT_EXPIRES_IN:', process.env.JWT_EXPIRES_IN || 'NOT SET - using 24h default');\""
  },
  "keywords": [
    "scrum",
    "blockchain",
    "backend",
    "nodejs"
  ],
  "author": "",
  "license": "ISC",
  "dependencies": {
    "axios": "^1.11.0",
    "bcryptjs": "^2.4.3",
    "cors": "^2.8.5",
    "dotenv": "^16.3.1",
    "ethers": "^6.15.0",
    "express": "^4.18.2",
    "express-rate-limit": "^7.1.5",
    "express-validator": "^7.0.1",
    "helmet": "^7.1.0",
    "jsonwebtoken": "^9.0.2",
    "node-fetch": "^3.3.2",
    "pg": "^8.11.3"
  },
  "devDependencies": {
    "jest": "^29.7.0",
    "nodemon": "^3.0.2",
    "supertest": "^6.3.3"
  }
}
